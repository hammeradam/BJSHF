<% include header %>
  <!-- Login -->
  <main>
    <div class="container">
      <div class="row">
        <div class="col s12 m6 push-l3 push-m3">
          <div class="card teal darken-3 center-align">
            <div class="card-content white-text">
              <span class="card-title">Enter Your email address!</span>
              <form method="POST" action="/forgotten">

                <div class='row'>
                  <div class='input-field col s12'>
                    <i class="material-icons prefix">account_circle</i>
                    <input id="email" type="email" name="forgottenemail" class="validate" placeholder="Email...">
                    <label for="email">Email</label>
                  </div>
                </div>

                <div class="card-action">
                  <input type="submit" class="waves-effect waves-light btn-large" value="Send Password" />
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <% include errorbox %>
      </div>
    </div>
  </main>
  <% include footer %>