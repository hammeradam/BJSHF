<% include header %>
  <!-- Profile -->
  <main>
    <div class="container">
      <div class="row">
        <div class="col s12 m6">
          <div class="card horizontal">
            <div class="card-image">
              <img src="../images/profile.jpg">
            </div>
            <div class="card-stacked">
              <div class="card-content">
                <span class="card-title">
                  Username:
                  <%= user.username %>
                </span>
                <!-- <p>Joined: </p>
                          <p>Followers: </p>
                          <p>Following: </p> -->
                <% if (id != user._id){ %>
                  <button class="btn waves-effect waves-light" type="submit" name="action">Follow
                    <i class="material-icons right">send</i>
                  </button>
                  <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="card teal">
        <div class="card-tabs teal">
          <ul class="tabs tabs-fixed-width teal">
            <li class="tab">
              <a href="#test4" class="white-text">People I Follow</a>
            </li>
            <li class="tab">
              <a href="#ownPlaylists" class="active white-text">My Lists</a>
            </li>
            <li class="tab">
              <a href="#otherUsers" class="white-text">Other Users</a>
            </li>
          </ul>
        </div>
        <div class="card-content teal lighten-4">
          <div id="test4">
            <p>Maybe one day...</p>
          </div>

          <div id="ownPlaylists">
            <% playlists.forEach(playlist => { %>
              <div class="card">
                <div class="card-image">
                  <img src="../images/800.jpg">
                </div>
                <div class="card-content">
                  <span class="card-title">
                    <%= playlist.name %>
                  </span>
                  <p>
                    <%= playlist.desc %>
                  </p>
                </div>
                <div class="card-action">
                  <a href="/playlist/<%= playlist._id %>" class="teal-text">View list!</a>
                  <a href="/playlist/<%= playlist._id %>/delete">
                    <i class="material-icons teal-text right">delete</i>
                  </a>
                </div>
              </div>
              <% }); %>
          </div>

          <div id="otherUsers">
            <% users.forEach(profile => { %>
              <% if (user._id.toString() != profile._id.toString()) { %>
                <% include profileCard %>
                  <% }%>
                    <% }); %>
          </div>
        </div>

      </div>
    </div>
  </main>

  <!-- Floating action button -->
  <div class="fixed-action-btn">
    <a class="btn-floating btn-large red modal-trigger" href="#newPlaylistModal">
      <i class="large material-icons">playlist_add</i>
    </a>
  </div>

  <!-- New Playlist Modal -->
  <% include newPlaylistModal %>

    <% include footer %>