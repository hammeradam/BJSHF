<% include header %>
<!-- Register -->
<main>
    <div class="container">
        <div class="row">
            <div class="col s12 m6 push-l3 push-m3">
                <div class="card teal darken-3 center-align">
                    <div class="card-content white-text">
                        <span class="card-title">Register</span>
                        <form action="" method="post">
                            <div class='row'>
                                <div class='input-field col s12'>
                                    <i class="material-icons prefix">email</i>
                                    <input id="icon_prefix1" type="email" class="validate">
                                    <label for="icon_prefix1">Email</label>
                                </div>
                            </div>

                            <div class='row'>
                                <div class='input-field col s12'>
                                    <i class="material-icons prefix">account_circle</i>
                                    <input id="icon_prefix2" type="email" class="validate">
                                    <label for="icon_prefix2">Username</label>
                                </div>
                            </div>

                            <div class='row'>
                                <div class='input-field col s12'>
                                    <i class="material-icons prefix">vpn_key</i>
                                    <input id="icon_prefix3" type="password" class="validate">
                                    <label for="icon_prefix3">Password</label>
                                </div>
                            </div>

                            <div class='row'>
                                <div class='input-field col s12'>
                                    <i class="material-icons prefix">vpn_key</i>
                                    <input id="icon_prefix4" type="password" class="validate">
                                    <label for="icon_prefix4">Re-type Password</label>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="card-action">
                        <a class="waves-effect waves-light btn-large" href="index">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<% include footer %>