<% include header %>
  <!-- Login -->
  <main>
    <div class="container">
      <div class="row">
        <div class="col s12 m6 push-l3 push-m3">
          <div class="card blue-grey darken-3 center-align">
            <div class="card-content white-text">
              <span class="card-title">Please, login into your account</span>
              <form method="POST">

                <div class='row'>
                  <div class='input-field col s12'>
                    <i class="material-icons prefix">account_circle</i>
                    <input id="email" type="email" name="email" class="validate" placeholder="Email...">
                    <label for="email">Email</label>
                  </div>
                </div>

                <div class='row'>
                  <div class='input-field col s12'>
                    <i class="material-icons prefix">vpn_key</i>
                    <input id="password" type="password" name="password" class="validate">
                    <label for="password">Password</label>
                  </div>
                  <label style='float: right;'>
                    <a class='white-text' href='/forgotten'>
                      <b>Forgot Password?</b>
                    </a>
                  </label>
                </div>

                <div class="card-action">
                  <input type="submit" class="waves-effect waves-light btn-large blue-grey" value="Login" />
                </div>
              </form>
            </div>
          </div>
        </div>

      </div>
      <div class="row">
        <% include errorbox %>
      </div>

    </div>
  </main>
  <% include footer %>