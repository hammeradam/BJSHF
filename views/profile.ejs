<% include header %>
<!-- Profile -->
<main>
    <div class="container">
        <div class="row">
            <div class="col s12 m6">
                <div class="card horizontal">
                    <div class="card-image">
                        <img src="https://lorempixel.com/100/190/">
                    </div>
                    <div class="card-stacked">
                        <div class="card-content">
                            <p>Username: <%= profile.name %></p>
                            <p>Joined: <%= profile.joined %></p>
                            <p>Followers: <%= profile.followers %></p>
                            <p>Following: <%= profile.following %></p>
                            <button class="btn waves-effect waves-light" type="submit" name="action">Follow
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card teal">
            <div class="card-tabs teal">
                <ul class="tabs tabs-fixed-width teal">
                    <li class="tab">
                        <a href="#test4" class="white-text">People I Follow</a>
                    </li>
                    <li class="tab">
                        <a href="#test5" class="active white-text" >My Lists</a>
                    </li>
                    <li class="tab">
                        <a href="#test6" class="white-text">Recommended</a>
                    </li>
                </ul>
            </div>
            <div class="card-content teal lighten-4">
                <div id="test4">
                    <div class="row">
                        <% profiles.forEach(function(profile) { %>
                            <% include profileCard %>
                        <% }); %>
                    </div>
                </div>

                <div  id="test5">
                    <div class="row">    
                        <% playlists.forEach(function(card) { %>
                            <% include playListcard %>
                        <% }); %>
                    </div>  
                </div>                

                <div id="test6">
                    <p>Test 3</p>
                </div>
            </div>

        </div>
    </div>
</main>

<!-- Floating action button -->
<div class="fixed-action-btn">
    <a class="btn-floating btn-large red modal-trigger"  href="#newPlaylistModal">
        <i class="large material-icons">playlist_add</i>
    </a>
</div>

<!-- New Playlist Modal -->
<div id="newPlaylistModal" class="modal modal-fixed-footer">
    <div class="modal-content">
        <div class="container">
            <h4>New Playlist</h4>
            <form action="">
                <div class="input-field">
                    <input placeholder="Name" id="first_name" type="text" class="validate">
                    <label for="first_name">Playlist Name</label>
                </div>

                <div class="input-field">
                    <textarea id="textarea1" class="materialize-textarea" data-length="120"></textarea>
                    <label for="textarea1">Description</label>
                </div>

